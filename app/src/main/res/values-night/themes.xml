<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LearnToCook" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_orange</item>
        <item name="colorPrimaryVariant">@color/primary_orange_accent</item>
        <item name="colorOnPrimary">@color/primary_orange_light</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/primary_orange_light</item>

        <item name="android:background">@color/primary_orange_90</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="ButtonStyle">
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">?colorSecondary</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources>